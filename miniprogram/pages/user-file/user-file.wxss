/* pages/user-file/user-file.wxss */
.container{
    width: 100vw;
    height: 100vh;
}
.container-content{
    width: 90%;
    margin: 0 auto;
}
.noData{
    margin-top: 50%;
    font-size: 30rpx;
    color: #ccc;
}
.container-content-item{
    box-sizing: border-box;
    width: 100%;
    height: 350rpx;
    display: flex;
    margin-top: 50rpx;
    border-radius: 30rpx;
    padding: 20rpx;
    background: #fff;
}
.container-content-item .itme-img{
    width: 40%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 1px dotted #ddd;

    
}
.container-content-item .itme-img image{
    width: 200rpx;
    height: 240rpx;
}
.itme-img-content{
    width: 55%;
}
.itme-img-info{
    width: 100%;
    height: 140rpx;
    margin-left: 20rpx;
    margin-top: 30rpx;
    border-bottom: 1px dotted #ddd;
}
.itme-img-info-t{
    font-size: 30rpx;

}
.itme-img-info-b{
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #ccc;
}
.itme-img-btn{
    width: 70%;
    height: 150rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;

}
.icon_noData{
    font-size: 120rpx;
    text-align: center;
}
.icon_download{
    font-size: 60rpx;
    color: #ccc;
}
.icon_delete{
    font-size: 60rpx;
    color: #ccc;
}